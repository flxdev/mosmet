							a(href="#").bread-item Главная
							a(href="#").bread-item Врачи
	.wrapper
		.box
			.content-element
				.docsearch-wrap
					.docsearch-inner
						form.docsearch-head
							.docsearch-col
								.input-item.s-100
									.input-wrapper.req
										.select-check.js-select-custom
											button.selects.dropdown(data-placeholder='Выберите отделение')
