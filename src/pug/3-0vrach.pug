																input(type='radio', name='group42', value='val2')
																span Специалист2
															label.option
																input(type='radio', name='group42', value='val3')
																span Специалист 3
															label.option
																input(type='radio', name='group42', value='val4')
																span GHJGHJ
															label.option
																input(type='radio', name='group42', value='val5')
																span GHJ
															label.option
																input(type='radio', name='group42', value='val6')
