								+vrach3(2,'Гинекология','Стелла Олеговна Солнцева','2.1')
								+vrach3(3,'Стоматология','Ирина Владимировна Мусатова','1.5')
								+vrach3(4,'Стоматолfsdf  fs огия','Ирина Владимировна Мусатова','3.5')
								+vrach3(4,'Стоматолfsdf  fs огия','Ирина Владимировна Мусатова','3.8')
								+vrach3(2,'Гинекология','Стелла Олеговна Солнцева','4.5')
								+vrach3(2,'Гинекология','Стелла Олеговна Солнцева','4.1')
								+vrach3(2,'Гинекология','Стелла Олеговна Солнцева','2.5')
								+vrach3(2,'Гинекология','Стелла Олеговна Солнцева','2.6')
								+vrach3(3,'Стоматология','Ирина Владимировна Мусатова','2.7')
