																span 3HGJ
															label.option
																input(type='radio', name='group42', value='val12')
																span 3HGJ
							.docsearch-col
								include includes/_suggest.pug
						.docsearch-body
							.docsearch-container
								mixin vrach3(img,title,name,rait)
									.vrach-wrap
										.vrach-inner
											.vrach-vrach
												.vrach-vrach-inner
													img(data-src="img/doctor/"+img+".png", alt=""+name+"").js-image
													.vrach-vrach-name #{title}
											.vrach-inner-block
												a(href="#").vrach-inner-wrap
													.vrach-inner-title #{name}
													.vrach-raiting.js-vrach-rait(data-raiting=''+rait+'').start
														svg(width='41', height='41', viewport='0 0 41 41', version='1.1', xmlns='http://www.w3.org/2000/svg')
															circle(r='20', cx='20', cy='20', fill='transparent', stroke-dasharray='125.66', stroke-dashoffset='0')
															circle.bar(r='20', cx='20', cy='20', fill='transparent', stroke-dasharray='125.66', stroke-dashoffset='0')
												.vrach-inner-add
													.offer-footer
														a(href="#", title='Запись к конкретному врачу напрямую').btn.primary
															span Записаться online
														// data-spec  определяет специальность, которая будет передаваться в модальное окно, работает не только здесь, но и на всех модалках data-modal='offer'
														a(href="#",data-modal='offer',data-spec='val4', title='Запись к специалисту через форму на сайте').text.js-popup-button Заявка на приём
								+vrach3(1,'Клинико-диагностическая лаборатория ','Ирина Владимировна Мусатова','4.8')
