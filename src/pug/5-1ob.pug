													.vrach-vrach-name
															.tel-item
																a(href="tel:84959566095").tel-item-tel 8 (495) 956-60-95
															.tel-item
																a(href="tel:84959566095").tel-item-tel 8 (495) 956-60-95
															a(href="mailto: koriod.olga@gmail.com").link koriod.olga@gmail.com
											.vrach-inner-block
												.vrach-inner-title #{title}
												.text-sm  #{subtitle}
								.col-wrapper
									.col-50
										+vrach4(1,'Короид Ольга Анатольевна','Главный врач')
